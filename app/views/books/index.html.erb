<h1>Books</h1>

<table>
  <thead>
    <tr>
      <th class="book-title">Title</th>
      <th class="book-body">Body</th>
    </tr>
  </thead>
  <tbody>
    <% @books.each do |book| %>
    <tr>
      <td><%= book.title %></td>
      <td><%= book.body %></td>
      <td>
        <%= link_to 'Show', book_path(book[:id]) %>
        <%= link_to 'Edit', edit_book_path(book[:id]) %>
        <%= link_to 'Destroy', book_path(book.id), method: :delete, "data-confirm" => 'Are you sure?' %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>

<h2>New book</h2>
<% if @book.errors.any? %>
<section>
  <div class="error-message">
  <% if @book.errors.count ==1 %>
    　<%= @book.errors.count %> error prohibited this book from being saved:
   <% else %>
     　<%= @book.errors.count %> errors prphibited this book from being saved:
  <% end %>
  </div>
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
</section>
<% end %>

<%= form_with model: @book, url: '/books', method: :post do |f| %>
  <h5>Title
    <div><%= f.text_field :title %></div>
  </h5>
  <h5>Body
    <div><%= f.text_area :body %></div>
  </h5>
  <div class="index-submit"><%= f.submit 'Create Book' %></div>
<% end %>
